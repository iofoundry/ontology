PREFIX owl:   <http://www.w3.org/2002/07/owl#> 
PREFIX rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> 
PREFIX xsd:   <http://www.w3.org/2001/XMLSchema#> 
PREFIX rdfs:  <http://www.w3.org/2000/01/rdf-schema#> 
PREFIX dct: <http://purl.org/dc/terms/>


##
# banner An ontology needs to have an abstract.


SELECT DISTINCT ?warning
WHERE 
{
  ?ont a owl:Ontology .
  FILTER NOT EXISTS {?ont owl:deprecated "true"^^xsd:boolean} .
  FILTER NOT EXISTS {?ont dct:abstract ?abstract.}

  FILTER regex(str(?ont), <HYGIENE_TESTS_FILTER_PARAMETER>)	
  
  BIND (CONCAT("WARNING:: Ontology ", STR(?ont), " does not have an abstract.") AS ?warning)
}
