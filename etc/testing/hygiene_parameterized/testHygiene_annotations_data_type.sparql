PREFIX rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX rdfs:  <http://www.w3.org/2000/01/rdf-schema#>
PREFIX owl:   <http://www.w3.org/2002/07/owl#>



##
# banner Every annotation should have a language tag.



SELECT DISTINCT ?warning ?resource
WHERE
{
  ?annotationProperty rdf:type owl:AnnotationProperty.
  ?resource ?annotationProperty ?annotation.
  
  
  FILTER (STRLEN(STR(DATATYPE(?annotation))) > 0)
  
  FILTER (REGEX(STR(?resource), <HYGIENE_TESTS_FILTER_PARAMETER>))
  
  BIND (CONCAT("WARN: Annotation ", STR(?annotationProperty), " of ", STR(?resource),  " has the datatype defined for property ", STR(?annotationProperty)) as ?warning)
}
